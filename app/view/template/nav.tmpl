{% macro nav_item(target, active=false) %}
<a class="nav-link {% if active %}active{% endif %}" href={% if active %}"#"{% else %}"{{ target }}"{% endif %}>
	{{ caller() }}
</a>
{% endmacro %}

{% macro nav(items, current=0) %}
<div class="d-flex flex-column">
	{% for item in items %}
		{% call nav_item(item.target, loop.index0 == current) %}
			{{ item.text }}
		{% endcall %}
	{% endfor %}
</div>
{% endmacro %}
