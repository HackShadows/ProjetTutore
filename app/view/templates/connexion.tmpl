{% extends "page.tmpl" %}
{% set nav_current = 4 %}

{% block nav %}
{% set nav_items = nav_items + [{"target": "/connexion", "text": "Connexion"}] %}
{{ nav_tmpl.nav(nav_items, 4) }}
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-12 col-lg-8">
            {% if not user_name %}
                <h1 class="title mb-4" id="contactFormTitle">Se connecter</h1>

				{% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Erreur :</strong> {{ error }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}

                <form action="/traitementConnexion" id="contactForm" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">Pseudo :</label>
                        <input type="text" id="username" name="username" class="form-control" value="{{ data.username }}" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Mot de passe :</label>
                        <input type="password" name="password" id="password" class="form-control" required>
                    </div>

                    <button type="submit" class="btn btn-primary px-4">Se connecter</button>
                </form>

                <div class="mt-4 pt-3 border-top">
                    Pas encore de compte ? 
                    <a href="/inscription">
                        <button class="btn btn-primary ms-2">S'inscrire</button>
                    </a>
                </div>
            {% else %}
				<div class="row justify-content-center">
					<div class="col-12 col-md-6 col-lg-5">
						<div class="card shadow-sm border-0 rounded-4 text-center p-4">
							<div class="card-body">
								<div class="mb-3">
									<i class="bi bi-person-circle text-primary" style="font-size: 4rem;"></i>
								</div>
								
								<h2 class="fw-bold mb-2">Bonjour, {{ user_name }} !</h2>
								<p class="text-muted mb-4">Vous êtes actuellement connecté à votre compte GeoPuzzle.</p>
								
								<div class="d-grid gap-2">
									<form action="/deconnexion" method="GET">
										<button type="submit" class="btn btn-outline-danger btn-lg w-100 rounded-pill shadow-sm">
											<i class="bi bi-box-arrow-right me-2"></i>Se déconnecter
										</button>
									</form>
									
									<a href="/" class="btn btn-link text-secondary mt-2">Retour à l'accueil</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endif %}
        </div>
    </div>
{% endblock %}