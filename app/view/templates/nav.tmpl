{% macro nav_item(text, target, active = false, level = 0) %}
<a class="list-group-item list-group-item-action border-0 py-3 px-4 {% if active %}active bg-primary-subtle text-primary fw-bold{% endif %}" 
   href="{{ target }}" 
   style="{% if active %}border-left: 4px solid #0d6efd !important;{% endif %} padding-left: {{ 1.5 + (level * 1) }}rem !important;">
    {{ text }}
</a>
{% endmacro %}

{% macro nav(items, current = 0) %}
<div class="list-group list-group-flush w-100">
    {% for item in items %}
        {% set level = item.level if( item.level is defined ) else 0 %}
        {{ nav_item(text = item.text, target = item.target, active = loop.index0 == current, level = level) }}
    {% endfor %}
</div>
{% endmacro %}