{% extends "page.tmpl" %}
{% set nav_current = 4 %}

{% block nav %}
	{% set nav_items = nav_items + [{"target": "/victoire?image_id="~image['id_image'], "text": "Victoire"}] %}
	{{ nav_tmpl.nav(nav_items, 4) }}
{% endblock %}

{% block main %}
	<h1> Bravo, vous avez rempli le puzzle</h1>
	{% if image['public'] and not trouve and not essai and not revele %}
		<form action="/devinerMonument" id="monument-guess-form" method="POST">
			<input type="text" id="monument" name="monument" placeholder="Nom du monument" required>
			<input type="hidden" name="id_image" id="id_image" value="{{ image['id_image'] }}">
			<button type="submit" class="btn btn-primary">C'est ce monument !</button>
		</form>
	{% elif image['public'] and trouve or revele %}
		<div class="table-responsive">
			<table class="table table-striped table-hover align-middle">
				<thead class="table-dark">
				<tr>
					<th>Image</th>
					<th>Nom du monument</th>
					<th>Description de l'image</th>
					<th>Lieu de la photo</th>
				</tr>
				</thead>
				<tbody>
				<tr>
					<td class="text-center">
						<img src="{{ image['url'] }}" style="object-fit: cover;width: 150px;height: 150px;">
					</td>

					<td>
						<p>{{ image['nom_monument'] }}</p>
					</td>

					<td>
						<p>{{ image['description'] }}</p>
					</td>

					<td>
						<p>{{ image['nom_commune'] }}</p>
					</td>
				</tr>
				</tbody>
			</table>
		</div>
	{% elif image['public'] and essai %}
		<form action="/devinerMonument" id="monument-guess-form" method="POST">
			<input type="text" id="monument" name="monument" placeholder="Nom du monument" required>
			<input type="hidden" name="id_image" id="id_image" value="{{ image['id_image'] }}">
			<button type="submit" class="btn btn-primary">C'est ce monument !</button>
		</form>
		<form action="/revelerMonument" id="monument-guess-form" method="POST">
			<input type="hidden" name="id_image" id="id_image" value="{{ image['id_image'] }}">
			<button type="submit" class="btn btn-secondary">Révéler le nom du monument</button>
		</form>
	{% endif %}


	<img src="{{ image['url'] }}">

{% endblock %}
