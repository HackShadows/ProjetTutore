{% extends "page.tmpl" %}

{% block nav %}
	{{ nav_tmpl.nav(nav_items, 2) }}
{% endblock %}

{% block main %}
	{% if listImages %}
		<li>
			{% for puzzle in listImages %}
				<ul> {{ puzzle }} </ul>
			{% endfor %}
		</li>
	{% else %}
		<p>Vous n'avez pas encore créé de puzzle.</p>
	{% endif %}
	<a href="/personal-puzzles/create-puzzle">
		<button class="btn btn-primary">Créer un puzzle</button>
	</a>
{% endblock %}