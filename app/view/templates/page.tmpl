<!doctype html>

{% import "nav.tmpl" as nav_tmpl %}

<html lang="fr">
<head>
	{% block head %}

	<title>GeoPuzzle</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/static/css/bootstrap.css">
	<link rel="stylesheet" href="/static/css/style.css">
	<script src="/static/js/bootstrap.js"></script>
	
	{% endblock %}
</head>

<body>
	<div class="d-flex flex-column">
		<header>
			{% block header %}
			<div class="d-flex align-content-center justify-content-center m-1 p-2 bg-primary">
				<h2>Header</h2>
			</div>
			{% endblock %}
		</header>
		<div class="d-flex flex-row">
			<nav>
				{% set nav_items = [
					{"target": "/", "text": "Accueil"},
					{"target": "/map", "text": "Carte des puzzles"},
					{"target": "/personal-puzzles", "text": "Mes puzzles"},
					{"target": "/personal-puzzles/create-puzzle", "text": "Cr√©er un puzzle", "level": 1},
					{"target": "/play", "text": "Jouer"},
					{"target": "/play/official-puzzle", "text": "Puzzle officiel", "level": 1},
					{"target": "/play/personal-puzzle", "text": "Puzzle personnel", "level": 1}]
				%}
				{% block nav %}
				{{ nav_tmpl.nav(items = nav_items, current = 0) }}
				{% endblock %}
			</nav>
			<main>
				{% block main %}
				{% endblock %}
			</main>
		</div>
		<footer>
			{% block footer %}
			<div class="d-flex align-content-center justify-content-center m-1 p-2 bg-secondary">
				<h3>Footer</h3>
			</div>
			{% endblock %}
		</footer>
	</div>
</body>

</html>
